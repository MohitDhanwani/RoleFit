generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRoles {
  ADMIN
  USER
}

model User {
  id                      String           @id @default(uuid())
  username                String
  emailAddress            String           @unique
  contactNumber           String?
  role                    UserRoles        @default(USER)
  isPremiumMember         Boolean          @default(false)
  skills                  String[]         @default([])
  hasExperience           Boolean          @default(false)
  totalMonthsOfExperience Int?
  prevJobTitle            String[]          @default([])
  jobsTargetting          String[]         @default([])
  jobsAppliedTo           JobInformation[]
  createdAt               DateTime         @default(now())
  updatedAt               DateTime         @default(now())
}

model JobInformation {
  jobId        String      @id @default(uuid())
  title        String
  description  String
  applyUrl     String
  usersApplied User[]
  createdAt    DateTime @default(now())
}
